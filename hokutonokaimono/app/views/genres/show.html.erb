					<%= @genre.name %> has no related artists
				<% else %>
					<% @genre.tracks.limit(10).each do |track| %>
						<%= link_to track.artist.name, artist_path(track.artist) %>
						<br>
					<% end %>
				<% end %>
		</div>
		<div class="span4">
			<h3><u>Associated Tracks</u></h3>
			<% if @genre.tracks.count == 0 %>
				<%= @genre.name %> has no related tracks
			<% else %>
				<% @genre.tracks.limit(10).each do |track| %>
					<%= link_to track.title, track_path(track) %>
					<br>
				<% end %>
			<% end %>
