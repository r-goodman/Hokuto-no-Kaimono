<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><u><%= f.label :username %></u><br />
  <%= f.text_field :username %></div>

  <br />

  <div><u><%= f.label :email %></u><br />
  <%= f.email_field :email %></div>

  <br />

  <div><u><%= f.label :password %></u><br />
  <%= f.password_field :password %></div>

  <br />

  <div><u><%= f.label :password_confirmation %></u><br />
  <%= f.password_field :password_confirmation %></div>

  <br />

  <div><button class="btn" id="terms_and_conditions_button">Terms and Conditions</button><br />
  <%#= f.check_box %></div>

  <br />

  <div><%= f.submit "Sign up", :class => "btn", :id => "sign_up_button" %></div>
<% end %>

<%= render "devise/shared/links" %>
